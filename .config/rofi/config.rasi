

* {

  /* Default background color */
  background-color: transparent;
  text-color:       white;
}


window {
  padding: 1em;

  border-color: #4480a7;
  border:       2px;
  border-radius: 10px;

  width:  1024px; 
//  height: 768px;

  background-color: #4480a7;

  background-image: url("flower-pattern-hd.png", both);
}

mainbox {
  spacing: 0px;
  children: [inputbar,wrapper-mode-switcher,listview];
}

// Icon 
element {
  background: transparent;
  children: [ element-icon, element-text ];
}

element,element-text,element-icon, button {
    cursor: pointer;
}

//white grey

inputbar {
  margin: 0px 0px 0.5em 0em;
  spacing: 0.4em;
  children: [ button-iggy1, entry,overlay,case-indicator, button-iggy2];
}

button-iggy1, button-iggy2 {
  expand: false;
  content: "üê¢";
  action: "kb-primary-paste";
  horizontal-align: 0.5;
}

button-iggy2 {
  action: "kb-screenshot";
}

listview, inputbar, message {
  padding: 0.5em;  
  border-color: #4480a7;
  border:        2px;
  border-radius: 10px;
  background-color: black/70%;

  columns: 4;
  lines:   4;
}

listview {
  border:       0px 2px 2px 2px;
  border-radius: 0px 0px 10px 10px;
}

element {
    border:  0;
    padding:      10px;
    font:         "Mono 8";
    orientation: vertical;
}

element-icon {
  size: 6em;
}

element selected {
  border-color: #4480a7;
  border:       2px;
  border-radius: 10px;
  background-color: red;
}

element-text, element-icon {
  font:             inherit; 
  horizontal-align: 0.5;
}

wrapper-mode-switcher {
    orientation: horizontal;

    expand:     false;
    spacing:    0;
    children: [ icon-ms-ic1, mode-switcher, icon-ms-ic2 ];
}

icon-ms-ic1 {
    filename: "go-previous";
    action: "kb-mode-previous";
}

con-ms-ic2 {
    filename: "go-next";
    action: "kb-mode-next";
}

icon-ms-ic1,icon-ms-ic2 {
    size: 16;
    vertical-align: 0.8;
    expand:        false;
    border:       0px 0px 2px ;
    border-color: #4480a7;
}

mode-switcher {
    border:  0px;
    spacing: 0px;
    expand: true;
}
button {
    text-color: white;
    border:       0px 0px 2px ;
    border-color: #4480a7;
    border-radius:    10px 10px 0 0;
    background-image: linear-gradient(to bottom, black/50%, black/70%);
    horizontal-align: 0.5;
}
button selected.normal {
    text-color: white;
    margin: 0px;
    padding: 0px;

    border:       2px 2px 0px ;
    border-color: #4480a7;
    border-radius:    10px 10px 0 0;
    background-image: linear-gradient(to bottom, black, black/70%);
}

entry {
    placeholder: "Iggy";
    placeholder-color: white/30%;
  }
